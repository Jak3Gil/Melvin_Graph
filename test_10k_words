rm -f graph.mmap

echo "Generating training data (patterns with variation)..."

# Create 10,000 words with patterns
{
    # Teach basic associations (2000 times each)
    for i in {1..2000}; do
        echo "cat"
        echo "dog"
        echo "bird"
        echo "fish"
        echo "tree"
    done
} > /tmp/training_10k.txt

WORD_COUNT=$(wc -w < /tmp/training_10k.txt)
echo "Training data: $WORD_COUNT words"
echo ""

echo "Training in progress..."
cat /tmp/training_10k.txt | ./melvin_core 2>&1 > /tmp/training_output.log

echo "âœ… Training complete!"
echo ""

